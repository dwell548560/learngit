void  break_rx_check_handle(void)
{
	u8 k;
	u16 crc_check = 0;

	for(k = 0;k < BREAK_CONTRL.break_rx_len ;k++)//½ÓÊÕµÄÉ²³µÇý¶¯Æ÷Êý¾Ý  
	{
		if((BREAK_CONTRL.break_rx_para[k] == 0x02)&&(BREAK_CONTRL.break_rx_para[k+1] == 0x06))//»Ø¸´ÕýÈ·Ö¸Áî,µØÖ·Ò²ÕýÈ·£¬Ä¿Ç°²»ÉÏ´« 11.30PYQ
		{
			crc_check = CRC16( &BREAK_CONTRL.break_rx_para[k] ,6);
			if((BREAK_CONTRL.break_rx_para[k+6] == (u8)crc_check)&&(BREAK_CONTRL.break_rx_para[k+7] == ((crc_check>>8)&0xff)))
			{
				memcpy(break_rx_data, &BREAK_CONTRL.break_rx_para[k], 8);//½ÓÊÕÍê³É
				BREAK_CONTRL.break_check_flag = 1;//½ÓÊÕÐ£Ñé³É¹¦  Êý¾ÝÕýÈ·
				BREAK_CONTRL.break_order_ok_flag = 1;//±íÃ÷·¢ËÍµÄÖ¸ÁîÕýÈ·
			
				
			}
					
		}  //µ±·¢ËÍÐ´µ¥¸ö¼Ä´æÆ÷Ê±£¬·µ»ØµÄ¹ÊÕÏÖ¸ÁîÊ±0x86£¬µ±Ð´¶à¸öÖ¸ÁîÊ±·µ»ØµÄ¹ÊÕÏÖ¸ÁîÊ±0x90,×ªÏòµç»úºÍÉ²³µµç»ú¶¼ÊÇÐ´¶à¸ö¼Ä´æÆ÷£¬ºóÂÖµç»úÊÇÐ´µ¥¸ö¼Ä´æÆ÷
		else if((BREAK_CONTRL.break_rx_para[k] == 0x04)&&(BREAK_CONTRL.break_rx_para[k+1] == 0x86))//»Ø¸´µÄ¹ÊÕÏÖ¸Áî ºóÂÖµç»úÊÇµ¥¸ö¼Ä´æÆ÷
		{
			crc_check = CRC16( &BREAK_CONTRL.break_rx_para[k] , 3);//Ð£Ñé´Ók¿ªÊ¼
				
			if((BREAK_CONTRL.break_rx_para[k+3] == (u8)crc_check)&&(BREAK_CONTRL.break_rx_para[k+4] == ((crc_check>>8)&0xff)))
			{
				memcpy(break_rx_data , &BREAK_CONTRL.break_rx_para[k] , 8);//½ÓÊÕÍê³É,½«Êý¾Ý¿½±´µ½»º³å

				usart4_tx_DMA(break_rx_data,sizeof(break_rx_data),break_rx_data[2]);//ÏòÉÏÎ»»ú»ã±¨´íÎóÇå¿Õ£¬break_rx_data[2]ÊÇ·µ»ØµÄ¹ÊÕÏÂë

				BREAK_CONTRL.break_rx_err_flag = 1;//½ÓÊÕµ½ÁËÇý¶¯Æ÷·´À¡µÄÖ¸Áî£¬±íÊ¾·¢ËÍµÄÖ¸ÁîÓÐÎÊÌ  â
				BREAK_CONTRL.break_order_err_flag = 1;//Çý¶¯Æ÷·´À¡Êý¾Ý±íÃ÷´ÓÕ¾½ÓÊÕ´íÎó
				
			}

		}//É²³µºÍÇ°ÂÖ×ªÏòµç»úÊÇÐ´¶à¸ö¼Ä´æÆ÷
		else if(((BREAK_CONTRL.break_rx_para[k] == 0x02)||(BREAK_CONTRL.break_rx_para[k] == 0x03))&&(BREAK_CONTRL.break_rx_para[k+1] == 0x90))
		{
			crc_check = CRC16( &BREAK_CONTRL.break_rx_para[k] , 3);//Ð£Ñé´Ók¿ªÊ¼
				
			if((BREAK_CONTRL.break_rx_para[k+3] == (u8)crc_check)&&(BREAK_CONTRL.break_rx_para[k+4] == ((crc_check>>8)&0xff)))
			{
				memcpy(break_rx_data , &BREAK_CONTRL.break_rx_para[k] , 8);//½ÓÊÕÍê³É£¬½«Êý¾Ý¿½±´µ½»º³å

				usart4_tx_DMA(break_rx_data,sizeof(break_rx_data),break_rx_data[2]);//ÏòÉÏÎ»»ú»ã±¨´íÎóÇå¿Õ£¬break_rx_data[2]ÊÇ·µ»ØµÄ¹ÊÕÏÂë

				BREAK_CONTRL.break_rx_err_flag = 1;//½ÓÊÕµ½ÁËÇý¶¯Æ÷·´À¡µÄÖ¸Áî£¬±íÊ¾·¢ËÍµÄÖ¸ÁîÓÐÎÊ? ?
				BREAK_CONTRL.break_order_err_flag = 1;//Çý¶¯Æ÷·´À¡Êý¾Ý±íÃ÷´ÓÕ¾½ÓÊÕ´íÎó
				
			}

		}






	}

