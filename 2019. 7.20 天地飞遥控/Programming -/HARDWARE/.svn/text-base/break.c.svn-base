void RS485_Send_Data(unsigned char *send_buff,unsigned int length)
{

	unsigned int i = 0;
	BREAK_485_EN = 1;//·¢ËÍÄ£Ê½																//485·¢ËÍÊ¹ÄÜ
	delay_us(500);															//ÉÔ×÷ÑÓÊ±£¬×¢ÒâÑÓÊ±µÄ³¤¶Ì¸ù¾Ý²¨ÌØÂÊÀ´¶¨£¬²¨ÌØÂÊÔ½Ð¡£¬ÑÓÊ±Ó¦¸ÃÔ½³¤
	USART_ClearFlag(USART2,USART_FLAG_TC);					//Çå³ý·¢ËÍÍê³É±êÖ¾£¬·ñÔòµÚÒ»¸öÊý¾Ý¿ÉÄÜ±»¸²¸Ç
	for(i = 0;i < length;i ++)
	{			
		USART2->DR = send_buff[i];
		while((USART2->SR&0X40)==0);	
	}
	delay_us(500); 															//ÉÔ×÷ÑÓÊ±£¬×¢ÒâÑÓÊ±µÄ³¤¶Ì¸ù¾Ý²¨ÌØÂÊÀ´¶¨£¬²¨ÌØÂÊÔ½Ð¡£¬ÑÓÊ±Ó¦¸ÃÔ½³¤
	BREAK_485_EN = 0;//485½ÓÊÕÄ£Ê½  


}



